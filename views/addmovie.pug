doctype html
html
  head
    title Add/Remove Movie
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1')
    link(rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css')
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js')
    script(src='https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js')
    link(rel='stylesheet' href='addstyle.css')
  body
    nav.navbar.navbar-expand-sm.navbar-dark.bg-dark
      ul.navbar-nav
        li.nav-item
          a.nav-link(href='/') Home
        if session && session.loggedin && session.user.contributer
          li.nav-item
            a.nav-link(href='/addremoveMovie') Add/Remove Movie
          li.nav-item
            a.nav-link(href='/personAdd') Add Person
        li.nav-item
          a.nav-link(href='/movies') Movies
        li.nav-item
          a.nav-link(href='/users') Users
        li.nav-item
          a.nav-link(href='/people') Actors, Writers, Directors
      ul.navbar-nav.ml-auto
        if session && session.loggedin
          a.nav-link(href='/users/'+session.user.id)="You are Currently Online " + session.username  
          a.nav-link(href='/logout') Log Out?
        else
          a.nav-link(href='/login') Login to your account
    h1 Adding Movie
    .Adding
      form(action='/addMovie' method='POST')
        label(for='movieTitle') Name:
        br
        input#name(type='text' name='movieTitle' placeholder='Enter Movie Name' size='30')
        br
        label(for='moviePlot') Plot:
        br
        textarea#plot(type='textarea' placeholder='Enter the plot/summary' name='moviePlot' size='30' style=("width: 450px; height: 160px"))
        br
        label(for='movieYear') Year:
        br
        input(type='text' placeholder='Enter the Release Date' id='movieYear' name='movieYear')
        br
        label(for='movieRunTime') Runtime:
        br
        input#Runtime(type='text' placeholder='Enter the Runtime' name='movieRunTime')
        br
        label(for='Actors') Actors (Seperate with a comma and a space (Actor, Actor)):
        br
        input#Actors(type='text' placeholder='Enter the Actors Names' name='movieActors' size='30')
        br
        label(for='Writers') Writers: (Seperate with a comma and a space (Director, Director))
        br
        input#Writers(type='text' placeholder='Enter the Writers Names' name='movieWriters' size='30')
        br
        label(for='Directors') Directors: (Seperate with a comma and a space (Director, Director))
        br
        input#Directors(type='text' placeholder='Enter the Directors Names' name='movieDirectors' size='30')
        br
        label(for='genre') Genre: (Seperate with a comma and a space (Genre, Genre))
        br
        input#genre(type='text' placeholder='Enter the Genre' name='movieGenre' size='30')
        br
        label(for='country') Country:
        br
        input#genre(type='text' placeholder='Enter the Country' name='movieCountry' size='30')
        br
        button#button.btn.btn-primary(type='submit') Add Movie
    h2 Remove Movie
    .removing
      form(action='/removeMovie' method='POST')
        label(for='name') Name:
        br
        input#name(type='text' name='movieToRemove' placeholder='Enter Movie Name to Remove' size='30')
        br
        button#button.btn.btn-primary(type='submit') Remove Movie
